.tc-colors {
  font-family: 'fcolor';
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.serial {
  display: flex;
  position: fixed;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  font-size: 60rpx;
  z-index: 99;
  transition: all .3s;
  will-change: transform;
}

.serial.fixed {
  transform: translateY(0) !important;
  box-shadow: 0 2px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 0.5px rgba(0, 0, 0, 0.04);
}


.serial.hidden {
  display: none;
}

.co-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  transition: all .3s;
}
.fa-down {
  transform: rotate(180deg);
}

.fa-up {
  transform: rotate(90deg);
}

.s-color {
  transition: all .3s;
  animation: scolor .3s ease;
}

@keyframes scolor {
  0% {
    transform-origin:top center;
    transform: scale(0.8);
  }
  100% {
    transform-origin:top center;
    transform: scale(1)
  }
}
.color-item {
  width: 96%;
  position: relative;
  box-shadow: 2px 2px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 0.5px rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
  margin: 20rpx 2%;
  transition: all .2s;
}

.color-item.selected {
  transform: translateX(-60%);
  box-shadow: 3px 3px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 0.5px rgba(0, 0, 0, 0.04);
}

.colors {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: inline-flex;
  justify-content: space-between;
}

.action {
  font-family: initial;
  /* color: #78909C;
  background: #ECF0F1; */
  box-shadow: 3px 3px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 0.5px rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
  position: absolute;
  right: -60%;
  display: none;
  height: 100%;
  width: 59%;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.action.selected {
  display: inline-flex;
}

.set-item {
  display: flex;
  flex-grow: 1;
  height: 100%;
  font-size: 34rpx;
  font-weight: bold;
  justify-content: center;
  align-items: center;
  transition: all .1s;
}

.set-item-hover {
  background: #FAFAFA;
  color: #78909C;
}

.set-icon, .set-title {
  display: flex;
  align-items: center;
}
.set-icon {
  width: 2em;
  justify-content: center;
}
.set-radio {
  transform: scale(0.8);
}

.set-title {
  width: 1em;
  flex-grow: 1;
  justify-content: flex-start;
}
.name {
  display: flex;
  font-size: 60rpx;
  line-height: 70rpx;
  width: 1em;
  padding: 1em 2em;
}

.value {
  width: 7em;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}