.center-view {
  width: 100%;
  height: 100%;
  position: relative;
}

.back-top {
  display: flex;
  width: 100%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  /* background: #549688; */
  transition: all .3s;
}

.blur {
  filter: blur(10px);
}

.userinfo {
  position: absolute;
  top: 20rpx;
  width: 90%;
  height: 160rpx;
  border-radius: 20rpx;
  opacity: .99;
  /* backdrop-filter: blur(10px);
  background: rgba(255,255,255,.8); */
  box-shadow: 0 2px 2px 0 rgba(100, 100, 100, .1);
  z-index: 1;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

