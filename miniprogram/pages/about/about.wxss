.content {
  height: 100%;
  overflow-y: scroll;
}
.logo {
  width: 120px;
  height: 120px;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.about {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  position: relative;
  width: 100%;
  line-height: 1.5em;
  letter-spacing: 0.1em;
}

.first {
  font-size: 2em;
  position: relative;
}
.first::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 2em;
  height: 10px;
  background: rgba(36, 191, 165, 0.2);
}

.name {
  color: #24BFA5;
}

.block {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 100rpx;
  background: #24BFA5;
  border-radius: 5px;
  color: #fff;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.08);
}
.block .left {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  border-radius: 5px;
  color: #24BFA5;
  background: #fff;
  justify-content: center;
  align-items: center;
  transition: all .25s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
}
.block .right {
  display: flex;
  position: absolute;
  height: 100%;
  right: 0;
  top: 0;
  justify-content: center;
  align-items: center;
  transition: all .25s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
}

.middle-icon {
  display: flex;
  align-self: center;
  justify-self: center;
  color:#24BFA5;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto;
  font-size: 40rpx;
}