.content {
  height: 100%;
  overflow-y: scroll;
}
.logo {
  width: 120px;
  height: 120px;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.about {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  position: relative;
  width: 100%;
  line-height: 1.5em;
  letter-spacing: 0.1em;
}

.first {
  font-size: 2em;
  position: relative;
}
.first::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 2em;
  height: 10px;
  background: rgba(36, 191, 165, 0.2);
}

.name {
  color: #24BFA5;
}

.block {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 2em;
  background: #24BFA5;
  border-radius: 5px;
  line-height: 1.5em;
  color: #fff;
  padding: 2px 4px;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.08);
}
.block .left {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  width: 60%;
  height: 100%;
  border-radius: 5px;
  color: #24BFA5;
  background: #fff;
  justify-content: center;
  align-items: center;
}
.block .right {
  display: flex;
  position: absolute;
  width: 40%;
  height: 100%;
  right: 0;
  top: 0;
  justify-content: center;
  align-items: center;
}