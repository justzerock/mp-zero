.content {
  height: 100%;
  overflow-y: scroll;
}
.logo {
  width: 120px;
  height: 120px;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.about {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  color: #333;
  position: relative;
  width: 600rpx;
  margin: auto;
  line-height: 1.5em;
  letter-spacing: 0.1em;
  flex-direction: column;
  text-align: left;
}

.first {
  font-size: 2em;
  position: relative;
}
.first::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 2em;
  height: 16rpx;
  background: rgba(36, 191, 165, 0.25);
}

.name {
  color: #24BFA5;
}

.first, .name {
  display: inline-flex;
}

.block {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 100rpx;
  background: #24BFA5;
  border-radius: 5px;
  color: #fff;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.08);
  transition: all .25s ease-in-out;
}
.block:active {
  transform: scale(0.99);
  opacity: 0.9;
}
.block .left {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  border-radius: 5px;
  color: #24BFA5;
  background: #fff;
  justify-content: center;
  align-items: center;
  transition: all 1.5s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
}
.block .right {
  display: flex;
  position: absolute;
  height: 100%;
  right: 0;
  top: 0;
  justify-content: center;
  align-items: center;
  transition: all 1.5s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
}

.middle-icon {
  display: flex;
  align-self: center;
  justify-self: center;
  color:#24BFA5;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto;
  font-size: 40rpx;
}