/* 显示城市 */
.locat-view {
  height: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.locat-text {
  display: inline-flex;
  font-weight: bold;
}

.locat-text>view {
  margin-left: 20rpx;
}

/* 天气滑动页 start */

.weather-swiper {
  display: flex;
  width: 100%;
  position: relative;
  z-index: 1;
  opacity: 0.85;
  height: calc(100% - 40rpx) !important;
}

.weather-swiper-item {
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  animation: showup 0.5s linear;
}

.swiper-card {
  display: flex;
  position: relative;
  align-items: center;
  flex-direction: column;
  flex: 1;
  margin: auto 50rpx 0;
  border-radius: 10rpx;
  box-shadow: 2px 2px 4px  rgba(0, 0, 0, 0.08);
  transition: all 0.25s ease-in-out;
  animation: card-show 1s;
}

.swiper-card:active {
  box-shadow: 1px 1px 1px  rgba(0, 0, 0, 0.08);
  opacity: 0.8;
  transform: scale(0.99);
}

@keyframes card-show {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.list.swiper-card {
  height: 100%;
  background: none;
  border: none;
  box-shadow: none;
  justify-content: space-between;
}

.day-list {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.list-card {
  display: flex;
  flex-direction: column;
  flex-flow: 1;
  height: 25%;
  margin: 20rpx 5%;
  border-radius: 20rpx;
  border: 5rpx solid #fff;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  will-change: transition;
  transition: all .2s;
  font-family: 'song';
}

.list-card:active {
  box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.08);
}

.list-card-hover {
  transform: translateX(1em);
}

.list-line {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  /* background: #f5f7f9; */
  border-radius: 0 0 20rpx 20rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.list-line.top {
  /* background: #7497bb; */
  border-radius: 20rpx 20rpx 0 0;
}

.list-line.top .list-cond-text {
  flex-grow: 1;
  /* color: #fff; */
}

.list-cond-text {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 60%;
  /* color: #7497bb; */
  text-align: center;
  margin: 20rpx auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.list-cond-img {
  display: inline-flex;
  width: 40%;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  /* color: #7497bb; */
}

/* Now·更新时间提示 start */

.v-now-upd {
  display: flex;
  position: absolute;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
}

.now-text {
  display: inline-flex;
  flex-grow: 1;
  color: #ccdae9;
  text-align: left;
  font-weight: bold;
  font-size: 60rpx;
  margin: 20rpx;
  z-index: 10;
  /* text-shadow: 5rpx 5rpx 0 #f5f7f9, 8rpx 8rpx 0 #ccdae9; */
}

.now-text.loading {
  animation: nowtext 400ms linear infinite;
}

@keyframes nowtext {
  50% {
    opacity: .5;
  }
}

.refresh {
  padding: 10rpx;
  opacity: .5;
  font-weight: bolder;
  transition: all .5s;
}

.refresh.loading {
  animation: refresh linear .5s infinite;
}

@keyframes refresh {
  100% {
    transform: rotate(360deg);
  }
}

.upd-text {
  font-size: 30rpx;
  position: absolute;
  will-change: transition;
  transition: all 1s linear;
  right: 20rpx;
  top: 20rpx;
  font-family: 'song';
}

/* 更新时间提示 end */

/* 天气图标 start */

.cond-img-v {
  display: flex;
  position: relative;
  height: 250rpx;
  justify-content: center;
  align-content: center;
  margin: 60rpx auto 20rpx;
  will-change: transform;
  animation: o-y 2s ease-out;
}

@keyframes o-y {
  0% {
    transform: translateY(-90rpx);
  }

  50% {
    transform: translateY(10rpx);
  }

  75% {
    transform: translateY(-5rpx);
  }

  100% {
    transform: translateY(0rpx);
  }
}

.cond-img {
  display: flex;
  position: absolute;
  justify-content: center;
  align-content: center;
  font-size: 240rpx;
  will-change: transform;  
  /* color: #3c5f81; */
}

.cond-img.sun {
  animation: sun 30s linear infinite;
  text-shadow: unset !important;
}

.sun.s1 {
  transform: translate(4rpx, 4rpx);
}
.sun.s0 {
  transform: translate(8rpx, 8rpx);
}

@keyframes sun {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

@keyframes others {
  0% {
    transform: translate(0,0);
  }

  12% {
    transform: translate(-4rpx,-2rpx);    
  }

  25% {
    transform: translate(-8rpx,0);    
  }

  37% {
    transform: translate(-4rpx,2rpx);    
  }

  50% {
    transform: translate(0,0);
  }

  62% {
    transform: translate(4rpx,-2rpx);    
  }

  75% {
    transform: translate(8rpx,0);    
  }

  87% {
    transform: translate(4rpx,2rpx);    
  }

  100% {
    transform: translate(0,0);
  }
}

.cloud-float {
  display: flex;
  position: absolute;
  top: 60rpx;
  height: 260rpx;
  width: 100%;
  opacity: 0;
}

.cloud-float.sun {
  animation: float-sun 5s linear;
}
@keyframes float-sun {
  0% {
    opacity: 0.25;
  }
  25% {
    opacity: 1;    
  }
  100% {
    opacity: 0;
  }
}
.cloud-float.others {
  opacity: 0.5;
}
.cloud1,.cloud2 {
  display: inline-flex;
  font-size: 150rpx;
  position: absolute;
}

.cloud1 {
  top: 100rpx;
  animation: float1 10s linear infinite;
}
.cloud2 {
  top: 50rpx;
  right: 0;
  animation: float2 10s linear infinite;
}

@keyframes float1 {
  0% {
    transform: translate(0,0);
    opacity: 25;
  }
  25% {
    transform: translate(20rpx,5rpx);
  }
  50% {
    transform: translate(50rpx,0);
    opacity: 100;
  }
  75% {
    transform: translate(20rpx,-5rpx);
  }
  100% {
    transform: translate(0,0);
    opacity: 25;    
  }
}
@keyframes float2 {
  0% {
    transform: translate(0,0);
    opacity: 25;
  }
  25% {
    transform: translate(-20rpx,-5rpx);
  }
  50% {
    transform: translate(-50rpx,0);
    opacity: 100;
    
  }
  75% {
    transform: translate(-20rpx,5rpx);
  }
  100% {
    transform: translate(0,0);
    opacity: 25;    
  }
}
/* 天气图标 end */

