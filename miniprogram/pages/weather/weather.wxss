.dots {
  position:absolute;
  display:flex;
  flex-direction:row;
  width:100%;
  height:40rpx;
  justify-content:center;
  bottom:0;
}

.dots .dot {
  margin: auto 8rpx;
  width: 14rpx;
  height: 14rpx;
  opacity: 0.5;
  border-radius: 8rpx;
  transition: all 0.6s;
  will-change: transition;
}

.dots .dot.active {
  width: 24rpx;
  opacity: 1;
}

/* 淡入动画 */

@keyframes showup {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 100;
  }
}

.small-weather {
  width: calc(100% - 84rpx);
  margin: auto auto 20rpx;
  font-size: 28rpx;
  position: relative;
  animation: card-show 1s;
  overflow-x: scroll;
  white-space: nowrap;
}

.small-weather .small {
  display: inline-table;
  border-radius: 10rpx;
  position: relative;
  flex-direction: column;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.08);
  transition: all .25s ease-in-out;
  width: calc(50% - 16rpx);
  margin: 10rpx 8rpx;
}

.small-weather .small:active {
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.08);
  opacity: 0.8;
  transform: scale(0.99);
}

.small-weather .small .line {
  display: flex;
  justify-content: space-between;
}

.small-weather .small .line.one {
  margin: 20rpx 20rpx auto;
}
.small-weather .small .line.two {
  margin: auto 20rpx 20rpx;
}

.small-weather .small .line .small-icon {
  font-size: 40rpx;
}

.add-weather {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.add-weather .circle {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 256rpx;
  height: 256rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.6);
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.08);
  position: absolute;
  transition: all .15s ease-in-out;
}

.add-weather .circle:active {
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.08);
  transform: scale(0.99);
  opacity: 0.8;
}

.add-weather .icon {
  font-size: 100rpx;
}

.add-weather .title {
  font-size: 30rpx;
}